{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "moduleResolution": "node",
        "jsx": "preserve",
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true
    },
    "include": ["./src/**/*", "./decl.d.ts"],
    "typeAcquisition": {
        "enable": true
    },
    "exclude": ["node_modules", "dist"]
}
